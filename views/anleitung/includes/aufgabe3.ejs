    &lt;html&gt;
    <br>
    &nbsp;&nbsp; &lt;head&gt;
    <br>
    &nbsp;&nbsp; &lt;/head&gt;
    <br>
    &nbsp;&nbsp; &lt;body&gt;
    <br>
  </span>
    &nbsp;&nbsp;&nbsp;&nbsp; &lt;a-box&gt;  &lt;/a-box&gt;
    <br>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;a-box&gt;  &lt;/a-box&gt;
    <br>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;a-sphere&gt;  &lt;/a-sphere&gt;
    <br>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;a-cylinder&gt;  &lt;/a-cylinder&gt;
    <br>
    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&lt;a-plane&gt;  &lt;/a-plane&gt;
    <br>
